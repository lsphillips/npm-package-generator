{
	%{~ if is_node_package || is_cli_package ~}
	"extends" :
	[
		"protect-me-from-my-stupidity",
		"protect-me-from-my-stupidity/and/from-writing-stupid-node-applications"
	],
	%{~ else ~}
	"extends" : "protect-me-from-my-stupidity",
	%{~ endif ~}

	"env" :
	{
		%{~ if is_browser_package ~}
		"browser" : true,
		%{~ endif ~}
		%{~ if is_node_package || is_cli_package ~}
		"node" : true,
		%{~ endif ~}
		"es6" : true
	},

	"root" : true
}
